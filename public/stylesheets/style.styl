body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background ghostwhite
  margin 0

article
  padding: 50px
a
  color: #00B7FF
.addCommentForm
    width 300px
    padding-bottom 50px
  input[type =text]
    width 200px
    margin-left 38px
  textarea
    width 200px
    margin-left 10px
  input[type =button], input[type =submit], a#api
    clear both
    margin-left 10px
    display inline-block
  span
    display block
  .label
      text-align right !important
      display block
      float left

footer
  position fixed
  bottom 0%
  background black
  color white
  width 98%
  padding 1%

#entries
  margin-bottom 4%
  .entry
    margin 2%

.api
  h1
    background #D5D5D5
    padding 2%
    border 1px solid rgb(81, 182, 174)
  .data
    width 50%
    margin auto auto
    padding 8px
    background-color #f7f7f9
    border 1px solid #e1e1e8
    margin-bottom 5%
  .bracket
    color #93a1a1
    padding 2%
  pre
    font-size 13px
    line-height 20px
    font-family Monaco,Menlo,Consolas,"Courier New",monospace;
    input,textarea
      border none
      width 20%
      margin-right:1%
      border: 1px solid #51b6ae;
    textarea
      width 90%
      height 100px
  .entry
    margin-left 5%
    .pln
      color #D14
      display inline-block
    .str
      color black
      font-wieght 600
      display inline-block
  .options
    width 50%
    margin auto auto
    padding 12px
    input
      font-size 20px