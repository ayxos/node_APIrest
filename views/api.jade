extends layout

block content
  .api
    h1 #{title}

    pre.data
      span.bracket {
      .entry
        span.str "title" :
        span.pln  #{entry.title}
      .entry
        span.str "description" :
        span.pln  #{entry.description}
      .entry
        span.str "created" :
        span.pln  #{entry.created}
      .entry
        span.str "id" :
        span.pln  #{entry.id}
      span.bracket }

    pre.data
      .entry
          span(style="width:20%").str Key ('title')
          span(style="width:20%;margin-right:1%").pln Value ('hello')
      .entry
          input#key.str
          input#value.pln
      div#addCommentSubmit
          input#update(type="submit", value="Update entry", style="font-size:20;float:right", data-id='#{entry.id}')

    .options
      input#del(type='submit', value='Delete', data-id='#{entry.id}')
      a(href='/', style="float:right") Back

block footer
  blockquote #{footer}
    a(href='https://github.com/cybermarkus1/express_basic') Github project